@model WriterMessage

@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Yeni Mesaj Gönderme Formu </h3>
                </div>
                <div class="col-4 text-right">
                    <a href="/AdminMessage/Sendbox/" class="btn btn-sm btn-primary">Mesajlarım</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <h6 class="heading-small text-muted mb-4">MESAJ BİLGİLERİ</h6>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Alıcı Mail</label>
                            <input type="email" class="form-control" asp-for="Receiver" placeholder="Alıcının mail bilgisini giriniz.">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Konu</label>
                            <input type="text" class="form-control" asp-for="Subject" placeholder="Mesaj konusunu giriniz.">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">İçerik</label>
                            <textarea rows="5" class="form-control" asp-for="Content" placeholder="Mesaj içeriğini giriniz."></textarea>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-info col-12">Gönder!</button>
            </form>
        </div>
    </div>
</div>