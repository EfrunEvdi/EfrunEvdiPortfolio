@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Projelerim</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Platform Görseli </th>
                                <th> Proje Adı </th>
                                <th> Durum </th>
                                <th> Görseller </th>
                                <th> Tamamlanma Oranı </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img class="bg-light" src="@item.Platform" alt="image" />
                                        @item.ProjectUrlTitle
                                    </td>
                                    <td> @item.Name </td>

                                    @if (item.Status == true)
                                    {
                                        <td> Aktif </td>
                                    }
                                    else
                                    {
                                        <td> Pasif </td>
                                    }

                                    <td class="py-1">
                                        <img class="bg-light" src="@item.ImageUrl1" alt="image" />
                                        <img class="bg-light" src="@item.ImageUrl2" alt="image" />
                                    </td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
