@model List<Portfolio>

<div class="col-xl-8">
    <div class="card">
        <div class="card-header border-0">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0">Son Projelerim</h3>
                </div>
                <div class="col text-right">
                    <a href="/Portfolio/Index" class="btn btn-sm btn-primary">Proje</a>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <!-- Projects table -->
            <table class="table align-items-center table-flush">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Proje Adı</th>
                        <th scope="col">Oran</th>
                        <th scope="col">Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.PortfolioID</th>
                            <td>@item.Name</td>
                            <td>@item.Value%</td>
                            <td><i class="fas fa-arrow-up text-success mr-3"></i> @item.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>