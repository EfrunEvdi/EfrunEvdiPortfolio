@model List<SocialMedia>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sosyal Medyalarım</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> İkon </th>
                                <th> Url </th>
                                <th> İşlem Seçiniz </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="@item.Icon"></i>
                                        <span class="pl-2">@item.Name</span>
                                    </td>
                                    <td> @item.Url </td>
                                    <td>
                                        <div class="dropdown">
                                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="mdi mdi-auto-fix"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                <a class="dropdown-item" href="/SocialMedia/EditSocialMedia/@item.SocialMediaID"><i class="mdi mdi-lead-pencil"></i> Güncelle</a>
                                                <a class="dropdown-item" href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID"><i class="mdi mdi-delete"></i> Sil</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/SocialMedia/AddSocialMedia" class="btn btn-outline-info col-12 mt-3">Yeni Sosyal Medya Ekle!</a>
                </div>
            </div>
        </div>
    </div>
</div>

