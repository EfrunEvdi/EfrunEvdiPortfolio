@model Feature

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Öne Çıkan Düzenleme Formu </h3>
                </div>
                <div class="col-4 text-right">
                    <a href="/Feature/Index/" class="btn btn-sm btn-primary">Öne Çıkan</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <h6 class="heading-small text-muted mb-4">ÖNE ÇIKAN BİLGİLERİ</h6>
                <div class="row">
                    <input type="hidden" asp-for="FeatureID" />
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-username">Başlık : </label>
                            <input type="text" id="input-username" class="form-control" asp-for="Header" placeholder="Selamlama ifadesi giriniz.">
                            @Html.ValidationMessageFor(x => x.Header, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-username">İsim Soyisim : </label>
                            <input type="text" id="input-username" class="form-control" asp-for="Name" placeholder="İsim ve soyiminizi giriniz.">
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-username">Ünvan: </label>
                            <input type="text" id="input-username" class="form-control" asp-for="Title" placeholder="Ünvanınızı giriniz.">
                            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary col-12">Öne Çıkanı Güncelle!</button>
            </form>
        </div>
    </div>
</div>