@model UpdateRoleViewModel

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Yeni Rol Ekleme Formu </h3>
                </div>
                <div class="col-4 text-right">
                    <a href="/Role/Index/" class="btn btn-sm btn-primary">Roller</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                @Html.HiddenFor(x=>x.RoleID)
                <h6 class="heading-small text-muted mb-4">ROL BİLGİLERİ</h6>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-username">Rol Adı : </label>
                            <input type="text" id="input-username" class="form-control" asp-for="RoleName" placeholder="Rol adı giriniz.">
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary col-12">Rolü Güncelle!</button>
            </form>
        </div>
    </div>
</div>

