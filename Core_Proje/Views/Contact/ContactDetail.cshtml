@model Message

@{
    ViewData["Title"] = "ContactDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Mesaj Detayı </h3>
                </div>
                <div class="col-4 text-right">
                    <a href="/Contact/Index/" class="btn btn-sm btn-primary">Mesajlarım</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <h6 class="heading-small text-muted mb-4">Mesaj Detayı</h6>
                <input type="hidden" asp-for="MessageID" />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-username">Gönderen </label>
                            <input type="text" class="form-control" asp-for="Name" disabled>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Mail</label>
                            <input type="text" class="form-control" asp-for="Mail" disabled>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Tarih</label>
                            <input type="text" class="form-control" asp-for="Date" disabled>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Açıklama</label>
                            <textarea rows="5" class="form-control" asp-for="Content" disabled></textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


