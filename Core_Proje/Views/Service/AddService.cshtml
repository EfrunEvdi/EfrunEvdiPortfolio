@model Service
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Yeni Hizmet Ekleme Formu </h3>
                </div>
                <div class="col-4 text-right">
                    <a href="/Service/Index/" class="btn btn-sm btn-primary">Hizmetlerim</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <h6 class="heading-small text-muted mb-4">HİZMET BİLGİLERİ</h6>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-username">Hizmet Adı : </label>
                            <input type="text" id="input-username" class="form-control" asp-for="Title" placeholder="Hizmet adını giriniz.">
                            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Hizmet Görseli</label>
                            <input type="text" id="input-email" class="form-control" asp-for="ImageUrl" placeholder="Hizmet görsel URL'sini giriniz.">
                            @Html.ValidationMessageFor(x => x.ImageUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary col-12">Yeni Hizmet Ekle!</button>
            </form>
        </div>
    </div>
</div>

