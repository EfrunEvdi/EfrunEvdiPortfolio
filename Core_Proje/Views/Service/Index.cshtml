@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmetlerim</h4>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Hizmet Görseli </th>
                                <th> Hizmet Adı </th>
                                <th> İşlem Seçiniz </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img class="bg-light" src="@item.ImageUrl" alt="image" />
                                    </td>
                                    <td> @item.Title </td>
                                    <td>
                                        <div class="dropdown">
                                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="mdi mdi-auto-fix"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                <a class="dropdown-item" href="/Service/EditService/@item.ServiceID"><i class="mdi mdi-lead-pencil"></i> Güncelle</a>
                                                <a class="dropdown-item" href="/Service/DeleteService/@item.ServiceID"><i class="mdi mdi-delete"></i> Sil</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Service/AddService" class="btn btn-outline-info col-12 mt-3">Yeni Hizmet Ekle!</a>
                </div>
            </div>
        </div>
    </div>
</div>