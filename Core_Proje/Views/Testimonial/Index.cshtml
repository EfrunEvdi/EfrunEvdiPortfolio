@model List<Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0">Referanslarım</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">Kişisel Bilgiler</th>
                            <th scope="col" class="sort" data-sort="budget">Meslek</th>
                            <th scope="col" class="sort" data-sort="status">Yorum</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img class="img-fluid bg-light" alt="Image placeholder" src="@item.ImageUrl">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.ClientName</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">
                                    @item.Company
                                </td>
                                <td>
                                    <div class="avatar-group">
                                        <textarea rows="5" class="form-control" disabled>@item.Comment</textarea>
                                    </div>
                                </td>
                                <td class="text-right">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                            <a class="dropdown-item" href="/Testimonial/EditTestimonial/@item.TestimonialID"><i class="fas fa-pen mx-0"></i> Güncelle</a>
                                            <a class="dropdown-item" href="/Testimonial/DeleteTestimonial/@item.TestimonialID"><i class="fas fa-trash  mx-0"></i> Sil</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Testimonial/AddTestimonial" class="btn btn-outline-primary col-12">Yeni Referans Ekle!</a>
            </div>
        </div>
    </div>
</div>