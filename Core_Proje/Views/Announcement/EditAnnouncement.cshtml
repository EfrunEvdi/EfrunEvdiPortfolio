@model Announcement

@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Duyuru Düzenleme Formu </h3>
                </div>
                <div class="col-4 text-right">
                    <a href="/Experience/Index/" class="btn btn-sm btn-primary">Duyurularım</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <h6 class="heading-small text-muted mb-4">DENEYİM BİLGİLERİ</h6>
                <input type="hidden" asp-for="ID" />
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Başlık</label>
                            <input type="text" class="form-control" asp-for="Title" placeholder="Başlık adını giriniz.">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Konu</label>
                            <input type="text" class="form-control" asp-for="Status" placeholder="Durum konusunu giriniz.">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Açıklama</label>
                            <textarea rows="5" class="form-control" asp-for="Content" placeholder="Duyuru açıklamasını giriniz."></textarea>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary col-12">Duyuruyu Güncelle!</button>
            </form>
        </div>
    </div>
</div>