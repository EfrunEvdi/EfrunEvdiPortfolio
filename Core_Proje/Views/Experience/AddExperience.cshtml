@model Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xl-12 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Yeni Deneyim Ekleme Formu </h3>
                </div>
                <div class="col-4 text-right">
                    <a href="/Experience/Index/" class="btn btn-sm btn-primary">Deneyimlerim</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post">
                <h6 class="heading-small text-muted mb-4">DENEYİM BİLGİLERİ</h6>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-username">Resim URL : </label>
                            <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Deneyim görsel URL'sini giriniz.">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Pozisyon</label>
                            <input type="text" class="form-control" asp-for="Title" placeholder="Pozisyon adını giriniz.">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Firma Adı</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Firma adını giriniz.">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Tarih</label>
                            <input type="text" class="form-control" asp-for="Date" placeholder="Deneyim tarihini giriniz.">
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Açıklama</label>
                            <textarea rows="5" class="form-control" asp-for="Description" placeholder="Deneyim açıklamasını giriniz."></textarea>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-primary col-12">Yeni Deneyim Ekle!</button>
            </form>
        </div>
    </div>
</div>