@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";

    string color = "";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Status == "Yeni Yazı")
                            {
                                color = "info";
                            }
                            if (item.Status == "MVC Yıldızları")
                            {
                                color = "primary";
                            }
                            if (item.Status == "Proje Bilgisi")
                            {
                                color = "success";
                            }

                            <tr>
                                <th>@item.Title</th>
                                <td>@(((DateTime)item.Date).ToString("dd MMMM yyyy"))</td>
                                <td><label class="badge badge-@color">@item.Status</label></td>
                                <td><a href="/Writer/Default/AnnouncementDetails/@item.ID" class="btn btn-outline-info">Detay</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
