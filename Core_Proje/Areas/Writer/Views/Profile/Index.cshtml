@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="border-bottom text-center pb-4">
                            <img src="@ViewBag.PP" alt="profile" class="img-lg rounded-circle mb-3" />
                            <div class="mb-3">
                                <h3>@ViewBag.NS</h3>
                            </div>
                            <p class="w-75 mx-auto mb-3">Sizleri aramızda görmekten mutluluk duyuyoruz! Hoş geldiniz! </p>
                            <div class="d-flex justify-content-center">
                                <a href="/Writer/Announcement/Index" class="btn btn-success me-1">Duyurular</a>
                                <a href="/Writer/Message/NewMessage" class="btn btn-success">Yeni Mesaj</a>
                            </div>
                        </div>
                        <div class="border-bottom py-4">
                            <p>Admin ile hakkında konuşabileceklerin:</p>
                            <div>
                                <label class="badge badge-outline-dark">.NET Core</label>
                                <label class="badge badge-outline-dark">Entity Framework</label>
                                <label class="badge badge-outline-dark">Yeni Proje Fikri</label>
                                <label class="badge badge-outline-dark">MVC Yıldızlar Bootcamp</label>
                                <label class="badge badge-outline-dark">C#</label>
                                <label class="badge badge-outline-dark">MSSQL</label>
                                <label class="badge badge-outline-dark">...</label>
                            </div>
                        </div>
                        <div class="border-bottom py-4">
                            <div class="d-flex mb-3">
                                <div class="progress progress-md flex-grow">
                                    <div class="progress-bar bg-primary" role="progressbar" aria-valuenow="100" style="width: 100%" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="progress progress-md flex-grow">
                                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="100" style="width: 100%" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                        <div class="py-4">
                            <p class="clearfix">
                                <span class="float-left">
                                    Kullanıcı Adı
                                </span>
                                <span class="float-right text-muted">
                                    @ViewBag.UN
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Mail
                                </span>
                                <span class="float-right text-muted">
                                    @ViewBag.MA
                                </span>
                            </p>
                        </div>
                        <a href="/Writer/Profile/Setting" class="btn btn-primary btn-block mb-2">Düzenle</a>
                    </div>
                    <div class="col-lg-8">
                        <div class="d-block d-md-flex justify-content-between mt-4 mt-md-0">
                            <div class="text-center mt-4 mt-md-0">
                                <a href="/Writer/Message/Inbox" class="btn btn-outline-primary">Gelen Mesajlarım</a>
                                <a href="/Writer/Message/Sendbox" class="btn btn-primary">Giden Mesajlarım</a>
                            </div>
                        </div>

                        <div class="profile-feed">
                            @foreach (var item in Model)
                            {
                                Random random = new Random();
                                int randomNumber = random.Next(1, 16);
                                string uzanti = randomNumber + ".jpg";

                                <div class="d-flex align-items-start profile-feed-item">
                                    <img src="~/skydash/images/samples/300x300/@uzanti" alt="profile" class="img-sm rounded-circle" />
                                    <i class="mdi mdi-biohazard img-sm rounded-circle"></i>
                                    <div class="ms-4">
                                        <h6>
                                            @item.Title
                                            <small class="ms-4 text-muted"><i class="ti-time me-1"></i>10 hours</small>
                                        </h6>
                                        <p>
                                            @item.Content
                                        </p>
                                        <p class="small text-muted mt-2 mb-0">
                                            <span>
                                                <i class="ti-star me-1"></i>Duyuru
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>