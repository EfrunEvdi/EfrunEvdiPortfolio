@model UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Bilgilerim</h4>
            <p class="card-description">
                Profil Bilgileri Düzenleme Formu
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">İsim</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="İsminizi giriniz.">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Soyisim</label>
                    <input type="text" asp-for="Surname" class="form-control" placeholder="Soyisminizi giriniz.">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Şifrenizi giriniz.">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre Tekrar</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Şifre tekrarını giriniz.">
                </div>
                <div class="form-group">
                    <label>Profil Resmi</label>
                    <input type="file" asp-for="Picture" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="file" asp-for="Picture" class="form-control file-upload-info" placeholder="Profil resminizi seçiniz.">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>