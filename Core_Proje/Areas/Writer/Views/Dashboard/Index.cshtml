@model WeatherViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Hoşgeldin @ViewBag.UserValues!</h3>
                <h6 class="font-weight-normal mb-0">Asp.Net Core Yazar Dashboard Paneli! Yeni Duyular İçin <span class="text-primary"><a href="/Writer/Announcement/Index">Hemen Tıkla!</a></span></h6>
            </div>
            <div class="col-12 col-xl-4">
                <div class="justify-content-end d-flex">
                    <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                        <button class="btn btn-sm btn-light bg-white dropdown-toggle" type="button" id="dropdownMenuDate2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <i class="mdi mdi-calendar"></i> Bugün @((DateTime.Now).ToString("dd MMMM yyyy"))
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuDate2">
                            <a class="dropdown-item" href="#">January - March</a>
                            <a class="dropdown-item" href="#">March - June</a>
                            <a class="dropdown-item" href="#">June - August</a>
                            <a class="dropdown-item" href="#">August - November</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card tale-bg">
            <div class="card-people mt-auto">
                <img src="~/skydash/images/dashboard/people.svg" alt="people">
                <div class="weather-info">
                    <div class="d-flex">
                        <div>
                            <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>@Model.temp<sup>C</sup></h2>
                        </div>
                        <div class="ml-2">
                            <h4 class="location font-weight-normal">İstanbul</h4>
                            <h6 class="font-weight-normal">Türkiye</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin transparent">
        <div class="row">
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-tale">
                    <div class="card-body">
                        <p class="mb-4">Gelen Mesaj Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.GMS</p>
                        <p>adet </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-dark-blue">
                    <div class="card-body">
                        <p class="mb-4">Duyuru Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.DS</p>
                        <p>adet </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                <div class="card card-light-blue">
                    <div class="card-body">
                        <p class="mb-4">Kullanıcı Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.KS</p>
                        <p>adet </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 stretch-card transparent">
                <div class="card card-light-danger">
                    <div class="card-body">
                        <p class="mb-4">Proje Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.PS</p>
                        <p>adet </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @await Component.InvokeAsync("Last7Projects")
    @await Component.InvokeAsync("Statistics")
    @await Component.InvokeAsync("Last5User")
</div>